<div class="row">
    <div class="col s6">
        {{#each burgers}}
            {{#unless this.devoured}}
                <form action="/burgers/{{this.id}}" method="POST">
                    <button class="btn waves-effect waves-light" type="submit" name="action">
                        {{this.burger_name}}
                    </button>
                </form>
            {{/unless}}
        {{/each}}
    </div>
</div>
